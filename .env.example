# VMS Data Collector Service - Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# Weather API (OpenWeatherMap)
# =============================================================================
# Get your free API key at: https://openweathermap.org/api
# Note: New keys take 2-3 hours to activate
WEATHER_API_KEY=your-api-key-here
WEATHER_API_URL=https://api.openweathermap.org

# =============================================================================
# AIS API (MarineTraffic or AIS Hub)
# =============================================================================
# MarineTraffic: https://www.marinetraffic.com/en/ais-api-services
# AIS Hub: https://www.aishub.net/
AIS_API_KEY=your_ais_api_key_here
AIS_API_URL=https://services.marinetraffic.com

# =============================================================================
# Port Data API
# =============================================================================
# Optional - can be left empty for development
PORT_API_KEY=your_port_api_key_here
PORT_API_URL=https://api.portdata.example.com

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_PORT=8080

# =============================================================================
# Collector Enable/Disable Flags
# =============================================================================
# Set to false to disable specific collectors during development
WEATHER_COLLECTOR_ENABLED=true
AIS_COLLECTOR_ENABLED=false
PORT_COLLECTOR_ENABLED=false

# =============================================================================
# Collection Intervals (in seconds)
# =============================================================================
WEATHER_POLL_INTERVAL=1800  # 30 minutes
AIS_POLL_INTERVAL=600       # 10 minutes
PORT_POLL_INTERVAL=3600     # 60 minutes
